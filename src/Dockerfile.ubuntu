FROM ubuntu:24.04

RUN apt-get update && apt-get -y install git gcc make libncurses-dev libssl-dev xorg-dev libsdl1.2-dev libpulse-dev libsndfile1-dev libasound2-dev

ENV CFLAGS "-O3"
ENV LDFLAGS "-O3"

RUN git clone https://github.com/chernandezba/zesarux.git && cd zesarux/src && ./configure --enable-ssl --disable-caca --disable-aa --disable-cursesw --prefix /usr && make clean && make -j2

RUN cd zesarux/src && ./generate_install_sh.sh

WORKDIR /zesarux/src

ENTRYPOINT [ "./zesarux" ]

CMD [ "--vo" , "stdout", "--ao" , "null" ]
